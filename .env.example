# ======================
# DATABASE
# ======================
DATABASE_URL="postgresql://postgres:JackCM@3003@localhost:5432/expense_tracker?schema=public"

# ======================
# SERVER
# ======================
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# ======================
# JWT AUTHENTICATION
# ======================
JWT_SECRET="your-super-secret-jwt-key-change-in-production-minimum-32-characters"
JWT_ACCESS_TOKEN_EXPIRY="15m"
JWT_REFRESH_TOKEN_EXPIRY="7d"

# Legacy (for backward compatibility)
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-in-production-minimum-32-characters"
REFRESH_TOKEN_EXPIRES_IN="7d"

# ======================
# PASSWORD HASHING
# ======================
BCRYPT_SALT_ROUNDS=12

# ======================
# SWAGGER DOCUMENTATION
# ======================
SWAGGER_ENABLED=true

# ======================
# AWS S3 (File Storage)
# ======================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="expense-tracker-receipts"

# Alternative: Cloudflare R2
# R2_ACCOUNT_ID="your-r2-account-id"
# R2_ACCESS_KEY_ID="your-r2-access-key"
# R2_SECRET_ACCESS_KEY="your-r2-secret-key"
# R2_BUCKET="expense-tracker-receipts"

# ======================
# EMAIL SERVICE (Resend)
# ======================
RESEND_API_KEY="re_your_resend_api_key"
FROM_EMAIL="noreply@yourdomain.com"

# ======================
# REDIS (Optional)
# ======================
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD=""

# ======================
# FRONTEND
# ======================
FRONTEND_URL="http://localhost:5173"
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW="15m"

# ======================
# FILE UPLOAD
# ======================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,application/pdf"

# ======================
# SENTRY (Error Tracking - Optional)
# ======================
# SENTRY_DSN="your-sentry-dsn"
# SENTRY_ENVIRONMENT="development"

# ======================
# LOG LEVEL
# ======================
LOG_LEVEL="info"
